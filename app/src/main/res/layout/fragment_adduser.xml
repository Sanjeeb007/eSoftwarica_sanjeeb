<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:text="Student Details"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="40dp" />

    <EditText

        android:id="@+id/etASnmae"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Student Name"
        android:inputType="text"
        android:textColorHint="#ffffff"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="#ffbf00"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText

        android:id="@+id/etASaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Student Address"
        android:textColorHint="#ffffff"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="#ffbf00"
        app:layout_constraintTop_toBottomOf="@+id/etASnmae" />

    <EditText

        android:id="@+id/etASage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Student Age"
        android:textColorHint="#ffffff"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="#ffbf00"
        app:layout_constraintTop_toBottomOf="@+id/etASaddress" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Select Gender"
        android:textColor="#ffffff"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/etASage"
        tools:layout_editor_absoluteX="0dp" />

    <RadioGroup
        android:id="@+id/rgGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:layout_width="52dp"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/male"
            tools:ignore="VectorDrawableCompat" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Male"
            android:textSize="20dp"
            android:textColor="#ffffff"/>

        <ImageView
            android:layout_width="49dp"
            android:layout_height="46dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/female"
            tools:ignore="VectorDrawableCompat" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Female"
            android:textSize="20dp"
            android:textColor="#ffffff"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Add"
        android:background="@drawable/butstyle"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/rgGender" />
</LinearLayout>